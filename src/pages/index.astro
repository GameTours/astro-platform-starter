---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const PageTitle = "Joe Young | jtyoung.me";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={PageTitle} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="indextitle">
			<h1>Hello.</h1>
				</div>
			<h2>
				Nice to see you here.
				</h2>
				<h2>
				I do things...
			</h2>
			<br>
			<div class="parent">
				<p>Hello1</p>
				<p>Hello2</p>
				<p>Hello3</p>
			</div>
			<br>
			<div class="indexlinks">
				<p>Will be the links section:<br>Keep the same as the 3x1 image grid but use links instead. </p>
				<a href="">Links section ....</a>
			</div>
		</main>
		<Footer />
		<style>
			h2 {
				font-size: 28px;
				font-weight: 500;
				margin-top: 20px;
				margin-bottom: 20px;
			}
			.indextitle {
				..
			}

			.parent {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			grid-template-rows: 1fr;
			grid-column-gap: 10px;
			grid-row-gap: 0px;
			}

		</style>
	</body>
</html>
